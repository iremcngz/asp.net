@using Travel.Models.Sinif
@model List<Travel.Models.Blog>

    <div class="padding">
        <h4>En popüler 10 Blog</h4>
        <ul class="list list-pad">
            @{ int i = 0;}
            @foreach (var x in Model) {
                <li class="list-bg"><span>@{i++;} @i </span><a href="/Blog/BlogDetay/@x.ID">@x.Baslik</a></li>
            }
        </ul>
        <a href="/Blog/Index/" class="link1">Diğer blogları gör</a>
    </div>
